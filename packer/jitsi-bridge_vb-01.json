{
  "variables": {
    "deploy_key": "deploykey",
    "git_sha": "master",
    "maven_token": "-"
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "account-videobridge-01.json",
      "project_id": "videobridge-01",
      "machine_type": "n1-standard-1",
      "zone": "europe-west1-b",
      "source_image_family": "ubuntu-1804-lts",
      "ssh_username": "packer",
      "disk_size": "10",
      "instance_name": "jitsi-vb-builder",
      "subnetwork": "videobridge-01-subnet",
      "image_name": "videobridge-{{ user `git_sha` }}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "videobridge.service",
      "destination": "/tmp/videobridge.service"
    },
    {
      "type": "file",
      "source": "filebeat.yml",
      "destination": "/tmp/filebeat.yml"
    },
    {
      "type": "file",
      "source": "filebeat.service",
      "destination": "/tmp/filebeat.service"
    },
    {
      "type": "file",
      "source": "node_exporter.service",
      "destination": "/tmp/node_exporter.service"
    },
    {
      "type": "file",
      "source": "rtp-audio-mixer.service",
      "destination": "/tmp/rtp-audio-mixer.service"
    },
    {
      "type": "file",
      "source": "settings.xml",
      "destination": "/tmp/settings.xml"
    },
    {
      "type": "shell",
      "scripts": [
        "jitsi-bridge.sh"
      ],
      "environment_vars": [
        "DEPLOY_KEY={{ user `deploy_key` }}",
        "GIT_SHA={{ user `git_sha` }}",
        "MAVEN_TOKEN={{ user `maven_token` }}"
      ]
    }
  ]
}